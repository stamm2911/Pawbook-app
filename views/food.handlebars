 {{> loginHeader}}
 {{#each FoodData as |food|}} 
 <main class="bg-white max-w-lg mx-auto p-8 md:p-12 my-10 rounded-lg shadow-2xl">
  <div>
      {{!-- <img class="justify-start rounded-lg h-12 w-12 inline-block" src="{{profile.profile_picture}}" alt="">   --}}
      <p class="inline-block ml-2 font-bold text-xl" href="">Post by: {{food.user.name}}</p>
      
      <h3 class="font-bold text-black-600 text-lg text-center">Brand: </h3>
      <p class="text-black-600 pt-2 text-center mb-8">{{food.brand}}</p>
      <h4 class="font-bold  text-black-600 text-lg pt-2 text-center">Quantity: </h4>
      <p class="text-black-600 pt-2 text-center mb-8">{{food.qty}} kg</p>
      <p class="font-bold  text-black-600 pt-2 text-lg text-center ">Date:</p>
      <p class="text-black-600 pt-2 text-center mb-8">{{food.date}}</p>
      <p class="font-bold  text-black-600 pt-2 text-lg text-center ">Food for:</p>
      <p class="text-black-600 pt-2 text-center mb-8">{{food.type}}</p>
      <p class="font-bold  text-black-600 pt-2 text-lg text-center ">Location:</p>
      <p class="text-black-600 pt-2 text-center mb-8">{{food.location}}</p>

      <button id="taken" class="float-right text-5xl -mt-8"><i class="fas fa-shopping-bag"></i></button>
      <p id="userID" class="hidden" >{{animal.user_id}}</p>
  </div>
</main>
  <script>
     let takenBtn = document.querySelector("#taken");
     let userID = document.querySelector("#userID");

     takenBtn.addEventListener('click', (e) => {
       fetch('localhost:3001/api/food/' + userID, {
        method: 'PUT', 
        headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        'taken' : true,
      })
    }) 
     })

   </script>
{{/each}}