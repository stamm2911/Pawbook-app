{{#each Lost_AnimalData as |animal|}}

      <img class="justify-start rounded-lg h-12 w-12 inline-block" src="{{profile.profile_picture}}" alt="">  
      <a class="inline-block ml-2 font-bold text-xl" href="">{{animal.user.name}}</a>
      <div class="flex justify-center">
        <img class="m-4 h-80 w-80" src="{{animal.photo}}" alt="">
      </div>
      
      <h3 class="font-bold text-black-600 text-lg text-center"> Date: </h3>
      <p class="text-black-600 pt-2 text-center mb-8"> {{animal.date}} </p>
      <h4 class="font-bold  text-black-600 text-lg pt-2 text-center">Last seen: </h4>
      <p class="text-black-600 pt-2 text-center mb-8">{{animal.last_seen}}</p>
      <p class="font-bold  text-black-600 pt-2 text-lg text-center ">Description:</p>
      <p class="text-black-600 pt-2 text-center mb-8">{{animal.description}}</p>

      <button id="found" class="float-right text-5xl -mt-8"><i class="fas fa-search-location"></i></button>
      <p id="userID" class="hidden" >{{animal.user_id}}</p>

      <script>
     let foundBtn = document.querySelector("#found");
     let userID = document.querySelector("#userID");

     foundBtn.addEventListener('click', (e) => {
       fetch('localhost:3001/api/lost_animal/' + userID, {
        method: 'PUT', 
        headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({
        'found' : true,
      })
    }) 
     })

   </script>
{{/each}}
